@model DatabaseAccessLayer.Models.Status

@{
    ViewData["Title"] = "Create";
    var isError =  "";
    if (ViewBag.isError != "Ok")
    {
        isError = ViewBag.isError;

    }

}

<h1>Create</h1>

<h4>My Status</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div>
            @if(isError != "")
            {
                <span class="text text-bg-danger">@isError</span>
            }
        </div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StatusId" class="control-label"></label>
                <input asp-for="StatusId" class="form-control" />
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<div>
    <a asp-action="Index" class="btn btn-blue">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
