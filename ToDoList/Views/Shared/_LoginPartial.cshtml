            <div class="container mt-3">
                <div class="col-4">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link btn-blue" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="container mt-3">
                <div class="col-4">
