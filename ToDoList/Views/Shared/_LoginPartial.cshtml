            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "MyTasks", new { area = "" })">
          
                <div class="nav-container d-flex">
                    <ul class="nav">
                        <li>
                                <button id="manage" class="nav-link btn box-link green-bg text-white p-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
